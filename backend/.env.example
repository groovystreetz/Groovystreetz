# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for your environment.
# You can use an online generator or Django's built-in management command.
DJANGO_SECRET_KEY="your-super-secret-django-key"

# SECURITY WARNING: don't run with debug turned on in production!
# Set to "False" in production environments.
DEBUG=True


# ==============================================================================
# DATABASE SETTINGS (PostgreSQL)
# ==============================================================================

# These values should match the ones defined in your docker-compose.yml
DB_NAME=groovystreetz
DB_USER=grooveuser
DB_PASSWORD=a_very_secure_password
DB_HOST=localhost
DB_PORT=5432


# ==============================================================================
# GOOGLE OAUTH2 SETTINGS
# ==============================================================================

# These credentials are required for the Google social login feature.
# You can obtain them from the Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"